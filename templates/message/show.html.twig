{% extends 'message/message_layout.html.twig' %}

{% block title %}Message{% endblock %}

{% block body %}
    {{ parent() }}
    <div class="row">
        <div class="border mt-5 shadow border-light message-author col-3 offset-1 d-flex flex-column align-items-center bg-dark pt-3">
            <h4 class="font-weight-bold">{{ message.sender.username}}</h4>
            <img class="p-2"src="{{ asset(image_directory_chess ~ (message.sender.profilePicture ?: 'default-chess.jpg') ) | imagine_filter('thumb_profile') }}" />  
            <p>{{message.sentAt|date("d/m/Y, H:i")}}</p>
        </div>
        <div class="message-body col-7 border mt-5 shadow border-light bg-dark d-flex flex-column pb-2">
            <h5 class="mt-3 border-bottom border-light pl-1 pb-2 mb-3">{{message.title}}</h5>
            {{message.body|raw}}
            <div class="ml-auto mt-auto">
            <button class="btn btn-light align-self-end mb-auto">repondre</button>
            </div>
        </div>
    </div>    

   
    {{ include('message/_delete_form.html.twig') }}
{% endblock %}
