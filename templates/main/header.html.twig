
 {% block header %}

 <header class="container">
     <div class="d-flex mb-1">
     <h1 class="col-8">
         <a class="" href="{{ path('home') }}">Chess Online</a>
     </h1>
     <div class="pt-3 col-4">
     {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
                 {{ 'layout.logged_in_as'|trans({'%username%': app.user.username}, 'FOSUserBundle') }} | 
                 <a class="p-0 btn btn-light" href="{{ path('fos_user_security_logout') }}">
                     {{ 'layout.logout'|trans({}, 'FOSUserBundle') }}
                 </a>
     {% endif %}
     </div>
     </div>

         <ul class="nav nav-tabs d-flex col-12">
            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                <li class="nav-item">
                    <a class="nav-link" href="{{ path('home') }}">Accueil</a>
                </li>
                 <li class="nav-item">
                    <a class="nav-link" href="{{ path('fos_user_profile_show') }}">Mon Profil</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Autres</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" href="#">Classement</a>
                </li>
            {% endif %}
        </ul>
          
 </header>
 {% endblock %}