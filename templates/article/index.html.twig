{% extends 'base.html.twig' %}

{% block title %}Article index{% endblock %}

{% block body %}
<div class="col-12">
<h1 class="text-center font-weight-bold mx-auto">News</h1>
    
{% if is_granted('ROLE_REDACTEUR') %}
    <a class="btn btn-light" href="{{ path('article_new') }}"><i class="fas fa-pen-alt"> Nouvel article</i></a>
{% endif %}
 <div class="row">
    {% for article in articles %}
          <div class="card col-sm-12 col-md-6 col-lg-3 m-2 mx-auto bg-custom p-0 border-light">
            <img class="card-img-top" src="https://picsum.photos/200">
            <div class="card-body">
                <h5 class="card-title">{{ article.title }}</h5>
                <p class="card-text">{{ article.extrait }}</p>
                <a href="{{ path('article_show', {id : article.id}) }}" class="btn btn-light">Lire la suite</a>
            </div>
        </div>
     {% endfor %}
    </div>
       {{ knp_pagination_render(articles, null, {}, {
        'align': 'center',
    }) }}
    </div>
{% endblock %}
