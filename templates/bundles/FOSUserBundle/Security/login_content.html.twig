{% trans_default_domain 'FOSUserBundle' %}

{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}    
        <a class="btn btn-outline-warning" href="{{ path('fos_user_resetting_request') }}"> Mot de passe oubli√© ? </a>    
    </div>
{% endif %}

<form class="form-horizontal" action="{{ path("fos_user_security_check") }}" method="post">

    {% if csrf_token %}
        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
    {% endif %}
    <div class="form-group">
        <label class="font-weight-bold control-label col-xs-2" for="username">{{ 'security.login.username'|trans }}</label>
        <div class="col-xs-10">
            <input class="form-control" type="text" id="username" name="_username" value="{{ last_username }}" required="required" autocomplete="username" />
        </div>
    </div>
    <div class="form-group">
        <label class="font-weight-bold" for="password">{{ 'security.login.password'|trans }}</label>
        <div class="col-xs-10">
            <input class="form-control" type="password" id="password" name="_password" required="required" autocomplete="current-password" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10">
            <input type="checkbox" id="remember_me" name="_remember_me" value="on" />
            <label class="font-weight-bold" for="remember_me">{{ 'security.login.remember_me'|trans }}</label>
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10 text-center">
            <input class="btn btn-dark" type="submit" id="_submit" name="_submit" value="{{ 'security.login.submit'|trans }}" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-xs-offset-2 col-xs-10 text-center">
            <p class="font-weight-bold mb-0 "> Pas encore de compte ?</p>
            <a class="btn btn-dark"href="{{ path('fos_user_registration_register') }}"> Inscription </a>
        </div>
    </div>
</form>
<div>
<a class="mb-1 col-12 btn btn-success"href="{{ path('hwi_oauth_service_redirect', {'service':'google'}) }}" class="gplus"><i class="fab fa-google"></i>oogle</a>
</div>
<div>
<a class="col-12 btn btn-primary"href="{{ path('hwi_oauth_service_redirect', {'service':'facebook'}) }}" class="gplus"><i class="fab fa-facebook-f"></i></i>acebook</a>
</div>